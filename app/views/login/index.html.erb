<!-- Always shows a header, even in smaller screens. -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title">
        <%= image_tag 'logo-light.png' %>
      </span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
    </div>
  </header>
  <main class="mdl-layout__content">
    <div class="page-content">

      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--3-col mdl-cell--0-col-tablet"></div>
        <div class="mdl-cell mdl-cell--6-col mdl-cell--12-col-tablet">
          <div class="center-content">
            <div class="mdl-card login-card mdl-shadow--2dp">

              <div class="mdl-card__title">
                <h2 class="mdl-card__title-text">Login to Shoptimize</h2>
              </div>

              <form action="login" method="post">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
                <div class="mdl-grid">
                  <div class="mdl-cell mdl-cell--12-col">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" id="email-text">
                      <input name="email" class="mdl-textfield__input" type="text" id="email" />
                      <label class="mdl-textfield__label" for="email">Email Address</label>
                    </div>
                  </div>
                  <div class="mdl-cell mdl-cell--12-col">
                    <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" id="login">
                      Login
                    </button>
                  </div>
                </div>
              </form>

              <div class="mdl-card__supporting-text">
                Enter your email address above to login to Shoptimize.
                If this is your first time using Shoptimize, enter your email address above to create an account.
              </div>

            </div>
          </div>
          </div>
        <div class="mdl-cell mdl-cell--3-col mdl-cell--0-col-tablet"></div>
      </div>

    </div>
  </main>
</div>